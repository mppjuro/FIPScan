<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark theme application theme. -->
    <style name="Theme.FIPscan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color for dark theme -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color for dark theme -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color for dark theme -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Custom attributes for dark theme -->
        <item name="switchTextColor">@color/light_gray</item>
        <!-- Dark theme text colors -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/light_gray</item>
        <!-- Dark theme background colors -->
        <item name="android:dividerHorizontal">@color/divider_dark</item>
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:colorBackgroundFloating">@color/background_floating_dark</item>
        <item name="colorSurface">@color/surface_dark</item>
        <!-- Surface colors for better contrast -->
        <item name="colorOnSurface">@color/white</item>
    </style>

    <style name="Theme.FIPscan.Dark" parent="Theme.FIPscan">
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <TextView
        android:id="@+id/textHistory"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/guidelineTop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchDarkMode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tryb_ciemny"
        android:textSize="16sp"
        android:textStyle="bold"
        android:minHeight="48dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/textHistory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textLanguageLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/wybierz_jezyk"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/switchDarkMode"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RadioGroup
        android:id="@+id/languageRadioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/textLanguageLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioPolish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/lang_polish"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:button="@null"
            android:background="@drawable/language_selector_background" />

        <RadioButton
            android:id="@+id/radioEnglish"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/lang_english"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:button="@null"
            android:background="@drawable/language_selector_background" />

        <RadioButton
            android:id="@+id/radioGerman"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/lang_german"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:button="@null"
            android:background="@drawable/language_selector_background"
            android:enabled="false"
            android:alpha="0.5" />

        <RadioButton
            android:id="@+id/radioFrench"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/lang_french"
            android:textSize="15sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:button="@null"
            android:background="@drawable/language_selector_background"
            android:enabled="false"
            android:alpha="0.5" />

    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>
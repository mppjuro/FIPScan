<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.diagnosis.DiagnosisFragment">

    <TextView
        android:id="@+id/textDiagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:text="@string/diagnoza"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/reportButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center"
        android:visibility="gone"
        android:background="?android:attr/colorBackground"
        android:elevation="2dp">

        <Button
            android:id="@+id/buttonDownloadReport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="@string/action_download_diagnosis"
            android:textSize="13sp"
            android:drawableStart="@drawable/ic_download_small"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            style="?attr/materialButtonStyle" />

        <Button
            android:id="@+id/buttonPrintReport"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="@string/action_print_diagnosis"
            android:textSize="13sp"
            android:drawableStart="@drawable/ic_print_small"
            android:drawablePadding="4dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            style="?attr/materialButtonStyle" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:layout_marginBottom="?attr/actionBarSize"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/textPatientInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textDiagnosticComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textRiskBreakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textFurtherTests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textRiskSupplements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textRiskConsult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textSupplements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textVetConsult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_background_themed"
                android:padding="12dp"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorPrimary"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/chartImageView"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:adjustViewBounds="true"
                android:contentDescription="Wykres elektroforezy"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:visibility="visible"
                tools:src="@tools:sample/backgrounds/scenic" />

            <LinearLayout
                android:id="@+id/analysisContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fitsSystemWindows="true">

    <ScrollView
        android:id="@+id/scrollViewDiagnosis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/linearDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <TextView
                android:id="@+id/textHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="8dp"
                android:text="ðŸ“„ Diagnoza"
                />

            <TextView
                android:id="@+id/textDiagnosticComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Komentarz diagnostyczny"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textSupplements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suplementy"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textVetConsult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konsultacja weterynaryjna"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="24dp" />

            <TextView
                android:id="@+id/textRiskComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ryzyko FIP"
                android:textAppearance="?attr/textAppearanceBody1"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textFurtherTests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dalsze badania"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textRiskSupplements"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Suplementy na podstawie elektroforezy"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/textRiskConsult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konsultacja specjalistyczna"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

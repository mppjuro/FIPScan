<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.diagnosis.DiagnosisFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Informacje o pacjencie -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <TextView
                android:id="@+id/textPatientInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Ładowanie danych pacjenta..."
                android:textSize="14sp"
                android:fontFamily="monospace"
                android:background="@color/cardview_light_background" />

        </androidx.cardview.widget.CardView>

        <!-- Ryzyko FIP -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🎯 OCENA RYZYKA FIP"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textDiagnosticComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Analiza ryzyka FIP..."
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/textRiskBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Szczegółowa analiza składowych..."
                    android:textSize="14sp"
                    android:fontFamily="monospace"
                    android:background="#f5f5f5"
                    android:padding="12dp"
                    android:visibility="visible" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Zalecenia związane z ryzykiem FIP -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📋 ZALECENIA (na podstawie ryzyka FIP)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textFurtherTests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dalsze badania..."
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textRiskSupplements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suplementy..."
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textRiskConsult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konsultacja..."
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Analiza wyników krwi -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🩸 ANALIZA WYNIKÓW KRWI"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textSupplements"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suplementy..."
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/textVetConsult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Konsultacja..."
                    android:textSize="14sp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
